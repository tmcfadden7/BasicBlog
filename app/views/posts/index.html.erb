


<% if current_user %>
  <h2>Welcome back <%= current_user.email.split('@')[0].capitalize %> to BLOG!</h2>
  <%= link_to "New Post", new_post_path %>
<% else %>
  <h2>Welcome to BLOG!</h2>
<% end %>

<div class="container">

<h2>Post Feed</h2>

<table class="col">
  <th>Users</th>
  <th>Posts Title</th>
  <th>Posts Text</th>
  <th>Comments</th>
</table>

  <% @posts.each do |post| %>

<table class="col text-justify">
  <tr>
    <td><%= post.user.email.split('@')[0].capitalize %></td>
    <td><%= post.title %></td>
    <td><%= post.text %></td>
    <td>Comments</td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
  </tr>
</table>
  <% end %>
  </div>
